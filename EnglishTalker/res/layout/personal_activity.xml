<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:text="Personal"
            android:textColor="@color/title_white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/channel_toggle_redleft"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Downloads"
            android:textColor="@color/toggle_text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_bookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/channel_toggle_pressedright"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Bookmarks"
            android:textColor="@color/toggle_text_black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>